2pl-ire-imp-verb-lex-rule.

;;;Argument Optionality

1sg-acc :=
%prefix (* mi-)
1sg-acc-lex-rule.

2sg-acc :=
%prefix (* ti-)
2sg-acc-lex-rule.

3sg-m-acc :=
%prefix (* lo-)
3sg-m-acc-lex-rule.

3sg-f-acc :=
