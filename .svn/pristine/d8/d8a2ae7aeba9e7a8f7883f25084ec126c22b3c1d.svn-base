; File for spelling preserving lexical rules, i.e., instances
; of (subtypes of) infl-ltol-rule and infl-ltow-rule.

; Every rule in this file should have a %suffix line.  Those
; that don't belong in lrules.tdl.

1sg-base-verb :=
%suffix (* -o)
1sg-base-verb-lex-rule.

2sg-base-verb :=
%suffix (* -i)
2sg-base-verb-lex-rule.

3sg-are-base-verb :=
%suffix (* -a)
3sg-are-base-verb-lex-rule.

3sg-non-are-base-verb :=
%suffix (* -e)
3sg-non-are-base-verb-lex-rule.

1pl-base-verb :=
%suffix (* -iamo)
1pl-base-verb-lex-rule.

2pl-are-base-verb :=
%suffix (* -ate)
2pl-are-base-verb-lex-rule.

2pl-ere-base-verb :=
%suffix (* -ete)
2pl-ere-base-verb-lex-rule.

2pl-ire-base-verb :=
%suffix (* -ite)
2pl-ire-base-verb-lex-rule.

3pl-are-base-verb :=
%suffix (* -ano)
3pl-are-base-verb-lex-rule.

3pl-non-are-base-verb :=
%suffix (* -ono)
3pl-non-are-base-verb-lex-rule.

;;;Imperatives

2sg-are-imp-verb :=
%suffix (* -a)
2sg-are-imp-verb-lex-rule.

2sg-non-are-imp-verb :=
